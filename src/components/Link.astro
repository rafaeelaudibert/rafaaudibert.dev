---
interface Props {
  href: string
  external?: boolean
}

const { href, external = true } = Astro.props
---

{
  external ? (
    <a
      href={href}
      target="_blank"
      rel="noopener noreferrer"
      aria-label={`${Astro.slots.has("default") ? "" : href} (opens in new tab)`}
    >
      <slot />
      <span class="sr-only">(opens in new tab)</span>
    </a>
  ) : (
    <a href={href}>
      <slot />
    </a>
  )
}
